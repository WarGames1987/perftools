#!/bin/bash

if [ -n "$1" ] ; then
    db="-d $1"
elif [ -n "${HPPTDATABASE}" ] ; then
    db="-d ${HPPTDATABASE}"
fi

. head.sh
psql ${PSQL_ARGS} $db ${HPPTOPTS} -c "
SELECT tbl_space,tablename,indexname,
  pg_size_pretty(min(size)::int8) as min,
  pg_size_pretty(max(size)::int8) as max,
  pg_size_pretty((max(size)-min(size))::int8) as diff
FROM hotspot
GROUP BY tbl_space,tablename,indexname
ORDER BY max(size) - min(size) DESC
LIMIT 30
"
